<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 style="color:#212529;font-weight:bolder">UPDATE TOY's INFORMATION</h2>
      <br>
      <form action="/editToy/{{Toys._id}}" method="post">
        <div class="mb-3">
          <label for="name" class="form-label" style="font-weight:bold">Name</label>
          <input class="form-control" type="text" name="toys_name" required value="{{Toys.toys_name}}">
        </div>
        <div class="mb-3">
          <label for="price" class="form-label" style="font-weight:bold">Year of manufacture </label>
          <input class="form-control" type="text" name="toys_year" required  min="2020" max="2023" value="{{Toys.toys_year}}">
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Country of manufacture</label>
          <input class="form-control" type="text" name="toys_country" required value="{{Toys.toys_country}}">
        </div>
         <div class="mb-3">
          <label for="name" class="form-label"style="font-weight:bold">Price</label>
          <input class="form-control" type="number" name="toys_price" required value="{{Toys.toys_price}}">
        </div>
         <div class="mb-3">
          <label for="name" class="form-label"style="font-weight:bold">Gender</label>
          <input class="form-control" type="text" name="toys_gender" required  value="{{Toys.toys_gender}}">
        </div>
         <div class="mb-3">
          <label for="name" class="form-label"style="font-weight:bold">Image</label>
          <input class="form-control" type="text" name="toys_image" required  value="{{Toys.toys_image}}">
        </div>
        <button type="submit" class="btn btn-primary" style="background-color: #212529; ">UPDATE</button>
      </form>
    </div>
  </div>
</div>